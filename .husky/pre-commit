# Format staged PHP files with Pint
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.php$' || true)
if [ -n "$STAGED_FILES" ]; then
  php ./vendor/bin/pint $STAGED_FILES
  git add $STAGED_FILES
fi
# Format all files
# php ./vendor/bin/pint

# Execute PHPUnit tests
# php artisan test tests/Feature/Prueba.php
